@model EditExpensesViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex flex-column align-items-center">
    <h1>Создание платежа</h1>
    <div class="w-50">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between">
                    <div class="control-label ms-2">Категория платежа:</div>
                </div>
                <select asp-for="CategoryId" asp-items="Model.SelectCategories" class="form-select"></select>
            </div>
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between">
                    <div class="control-label ms-2">Сумма платежа:</div>
                    <span asp-validation-for="Cost" class="text-danger" step="any"></span>
                </div>
                <input asp-for="Cost" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between">
                    <div class="control-label ms-2">Дата платежа:</div>
                    <span asp-validation-for="Datetime" class="text-danger"></span>
                </div>
                <input asp-for="Datetime" max="@DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between">
                    <div class="control-label ms-2">Описание:</div>
                    <span asp-validation-for="Commentary" class="text-danger"></span>
                </div>
                <textarea asp-for="Commentary" class="form-control h-auto" rows="10"></textarea>
            </div>
            <div class="form-group d-flex justify-content-center">
                <div class="">
                    <input type="submit" class="btn btn-dark" value="Подтвердить" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
